// https://leetcode.cn/problems/compare-version-numbers/

class Solution {
    // 分割字符串，每个部分转int后对比大小
    public int compareVersion(String version1, String version2) {
        // 特别注意这里要加转义符，因为.可以被认为是正则匹配所有字符
        String[] sp1 = version1.split("\\.");
        String[] sp2 = version2.split("\\.");
        int len1 = sp1.length;
        int len2 = sp2.length;

        for (int i = 0; i < Math.max(len1, len2); i++) {
            Integer val1 = 0;
            if (i < len1) {
                val1 = Integer.valueOf(sp1[i]);
            }
            Integer val2 = 0;
            if (i < len2) {
                val2 = Integer.valueOf(sp2[i]);
            }

            if (val1 < val2) {
                return -1;
            }
            if (val1 > val2) {
                return 1;
            }
        }

        return 0;
    }
}
